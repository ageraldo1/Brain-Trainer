<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itktechnologies.braintrainer.MainActivity">

    <TextView
        android:id="@+id/txt_secs_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:padding="20sp"
        android:text="30s"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cmdGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="231dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:onClick="cmdGo"
        android:padding="40dp"
        android:text="Go"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:padding="20sp"
        android:text="0/0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="77dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="24dp"
        android:padding="10sp"
        android:text="31+10"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_score"
        app:layout_constraintStart_toEndOf="@+id/txt_secs_left"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sum">


        <Button
            android:id="@+id/cmdAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@android:color/darker_gray"
            android:onClick="cmdAnswer"
            android:paddingLeft="60sp"
            android:paddingRight="60sp"
            android:tag="0"
            android:text="1"
            android:textSize="80sp" />

        <Button
            android:id="@+id/cmdAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@color/colorAccent"
            android:onClick="cmdAnswer"
            android:paddingLeft="60sp"
            android:paddingRight="60sp"
            android:tag="1"
            android:text="2"
            android:textSize="80sp" />

        <Button
            android:id="@+id/cmdAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@color/colorPrimary"
            android:onClick="cmdAnswer"
            android:paddingLeft="60sp"
            android:paddingRight="60sp"
            android:tag="2"
            android:text="3"
            android:textSize="80sp" />


        <Button
            android:id="@+id/cmdAnswer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_dark"
            android:onClick="cmdAnswer"
            android:paddingLeft="60sp"
            android:paddingRight="60sp"
            android:tag="3"
            android:text="4"
            android:textSize="80sp" />


    </GridLayout>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="220dp"
        android:layout_height="71dp"
        android:layout_marginEnd="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="46dp"
        android:text="Correct!"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>
